/* STYLE SHEET - DARK THEME */


#pagesContainer QFrame[frameStyle='outerCircle'] {
	border-radius: 30px;
	background-color: rgba(77, 77, 127, 100); 
}

#pagesContainer QFrame[frameStyle='innerCircle'] {
	border-radius: 25px;
	background-color: rgba(77, 77, 127, 255); 
}

/* stackedWidget */
#informasjon, #home, #kontroller { background-color: transparent; }

/* ScrollArea */
QScrollArea { background: transparent; }
QScrollArea > QWidget > QWidget { background: transparent; }

QWidget { color: rgb(221, 221, 221); }

QFrame#column1, #column2, #column3 { width: 100%; }

/* Labels */
QLabel { padding: 1px; }

QLabel[labelStyle='blackBg'] {
	background-color: rgb(30, 33, 38);
	border-radius: 5px;
	border: 1px solid rgb(30, 30, 30);
	padding: 10px;
}

QLabel[colorStyle='subTitle'] {
	color: rgb(113, 126, 149);
}


/* Buttons */
QPushButton {
	padding: 10px;
	margin: 1px;
}

#pagesContainer QPushButton[btnStyle='redBtn'] {
	border-color: rgb(80, 36, 37);
	background-color: qlineargradient(spread:pad, x1:0.5, y1:0, x2:0.495, y2:1, stop:0.00492611 rgba(211, 94, 94, 255), stop:1 rgba(96, 14, 14, 255));
}

#pagesContainer QPushButton[btnStyle='redBtn']:hover {
	background-color: qlineargradient(spread:pad, x1:0.5, y1:0, x2:0.495, y2:1, stop:0.00492611 rgba(255, 113, 113, 255), stop:0.995074 rgba(120, 18, 18, 255));
}

#pagesContainer QPushButton[btnStyle='redBtn']:hover:pressed {
	background-color: rgb(95, 9, 15); 
}

QPushButton:disabled {
	background-color:  rgba(45, 51, 63, 255);
	border: 2px solid rgb(52, 59, 72);
	border-radius: 5px;
}

#pagesContainer QPushButton {
	background-color: qlineargradient(spread:pad, x1:0.5, y1:0, x2:0.5, y2:1, stop:0 rgba(71, 81, 99, 255), stop:1 rgba(52, 59, 72, 255));
	border: 2px solid rgb(52, 59, 72);
	border-radius: 5px;
}

#pagesContainer QPushButton:hover {
	background-color: qlineargradient(spread:pad, x1:0.5, y1:0, x2:0.5, y2:1, stop:0 rgba(92, 104, 128, 255), stop:1 rgba(61, 69, 85, 255));
}

#pagesContainer QPushButton:hover:pressed {
	background-color: rgba(45, 51, 63, 255);
	border-color: rgb(33, 37, 46);
}

#pagesContainer QPushButton:checked {
	background-color: rgb(35, 41, 54);
	border: 1px solid rgb(23, 27, 37);
}

/* Tooltip */
QToolTip {
	padding: 5px;
	color: #ffffff;
	background-color: rgba(33, 37, 43, 240);
	border: 1px solid rgb(44, 49, 58);
}

/* Bg App */
#bgApp {	
	background-color: rgb(40, 44, 52);
	border: 1px solid rgb(44, 49, 58);
}

/* Left Menu */
#leftMenuBg {	
	background-color: rgb(33, 37, 43);
}

/* Top Menu */
#topMenu .QPushButton {	
	border: none;
	background-color: transparent;
}

#topMenu .QPushButton:hover {
	background-color: rgb(40, 44, 52);
}

#topMenu .QPushButton:pressed {	
	background-color: rgb(74, 82, 91);
	color: rgb(255, 255, 255);
}

/* Content App */
#contentTopBg{	
	background-color: rgb(33, 37, 43);
}

#contentBottom{
	border-top: 3px solid rgb(31, 35, 41);
}
/* Top Buttons */
#rightButtons .QPushButton { background-color: rgba(255, 255, 255, 0); border: none;  border-radius: 5px; }
#rightButtons .QPushButton:hover { background-color: rgb(44, 49, 57); border-style: solid; border-radius: 4px; }
#rightButtons .QPushButton:pressed { background-color: rgb(23, 26, 30); border-style: solid; border-radius: 4px; }

/* Bottom Bar */
#bottomBar { background-color: rgb(44, 49, 58); }
#bottomBar QLabel { color: rgb(113, 126, 149); padding-left: 10px; padding-right: 10px; padding-bottom: 2px; }

/*ScrollBars */
QScrollBar:horizontal {
    border: none;
    background: rgb(52, 59, 72);
    height: 8px;
    margin: 0px 21px 0 21px;
	border-radius: 0px;
}
QScrollBar::handle:horizontal {
    background: rgb(74, 82, 91);
    min-width: 25px;
	border-radius: 4px
}
QScrollBar::add-line:horizontal {
    border: none;
    background: rgb(55, 63, 77);
    width: 20px;
	border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
}
QScrollBar::sub-line:horizontal {
    border: none;
    background: rgb(55, 63, 77);
    width: 20px;
	border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
}
QScrollBar::up-arrow:horizontal, QScrollBar::down-arrow:horizontal {
     background: none;
}
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
     background: none;
}
 QScrollBar:vertical {
	border: none;
    background: rgb(52, 59, 72);
    width: 8px;
    margin: 21px 0 21px 0;
	border-radius: 0px;
 }
 QScrollBar::handle:vertical {	
	background: rgb(74, 82, 91);
    min-height: 25px;
	border-radius: 4px
 }
 QScrollBar::add-line:vertical {
    border: none;
    background: rgb(55, 63, 77);
    height: 20px;
	border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
 }
 QScrollBar::sub-line:vertical {
	border: none;
    background: rgb(55, 63, 77);
    height: 20px;
	border-top-left-radius: 4px;
    border-top-right-radius: 4px;
 }
 QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical {
     background: none;
 }
 QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
     background: none;
 }


/* ComboBox */
QComboBox{
	background-color: rgb(27, 29, 35);
	border-radius: 5px;
	border: 2px solid rgb(33, 37, 43);
	padding-left: 10px;
	width: 5px;
}
QComboBox:disabled{
	background-color: rgb(52, 53, 58);
	color: rgba(255, 255, 255, 55);
	border-radius: 5px;
	border: 2px solid rgba(26, 27, 33, 55);
	padding-left: 10px;
	width: 5px;
}

QComboBox:hover{
	border: 2px solid rgb(64, 71, 88);
}
QComboBox::drop-down {
	subcontrol-origin: padding;
	subcontrol-position: top right;
	width: 25px;
	border-left-width: 3px;
	border-left-color: rgba(39, 44, 54, 150);
	border-left-style: solid;
	border-top-right-radius: 3px;
	border-bottom-right-radius: 3px;	
	background-image: url(:/icons/images/icons/cil-arrow-bottom.png);
	background-position: center;
	background-repeat: no-repeat;
}
QComboBox QAbstractItemView {
	color: rgb(74, 82, 91);	
	background-color: rgb(50, 50, 50);
	padding: 10px;
	selection-background-color: rgb(39, 44, 54);
}

/* Sliders */
QSlider::groove:horizontal {
    border-radius: 8px;
    height: 16px;
	margin: 0px;
	background-color: rgb(52, 59, 72);
}
QSlider::groove:horizontal:hover {
	background-color: rgb(80, 85, 97);
}
QSlider::handle:horizontal {
    background-color: rgb(206, 203, 230);
    border: none;
    height: 16px;
    width: 16px;
    margin: 0px;
	border-radius: 8px;
}
QSlider::handle:horizontal:hover {
    background-color: rgb(255, 255, 255);
}
QSlider::handle:horizontal:pressed {
    background-color: rgb(143, 141, 160);
}

QSlider::groove:vertical {
    border-radius: 8px;
    width: 16px;
    margin: 0px;
	background-color: rgb(52, 59, 72);
}
QSlider::groove:vertical:hover {
	background-color: rgb(80, 85, 97);
}
QSlider::handle:vertical {
    background-color: rgb(206, 203, 230);
	border: none;
    height: 16px;
    width: 16px;
    margin: 0px;
	border-radius: 8px;
}
QSlider::handle:vertical:hover {
    background-color: rgb(255, 255, 255);
}
QSlider::handle:vertical:pressed {
    background-color: rgb(143, 141, 160);
}

.QSlider {
    min-height: 68px;
    max-height: 68px;
}